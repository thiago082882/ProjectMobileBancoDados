<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Home">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"


       >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
   <androidx.cardview.widget.CardView
    android:id="@+id/cdBanco"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="16dp"
    app:cardBackgroundColor="@color/black"
    app:cardCornerRadius="20dp"
    >
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:padding="50dp"
       android:orientation="horizontal"
       >
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/white"
    android:text="CADASTRAR BANCO"
    android:textStyle="bold"
    android:textSize="20sp"
    android:fontFamily="sans-serif-medium"
   android:layout_marginStart="40dp"
    android:layout_marginTop="25dp"


   />


   </LinearLayout>
</androidx.cardview.widget.CardView>
   <androidx.cardview.widget.CardView
       android:id="@+id/cdConta"
       android:layout_width="match_parent"
       android:layout_height="200dp"
       android:layout_margin="16dp"
       app:cardBackgroundColor="@color/cinza2"
       app:cardCornerRadius="20dp"
       >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="50dp"
          android:orientation="horizontal"
          >
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/white"
             android:text="CADASTRAR CONTA"
             android:textStyle="bold"
             android:textSize="20sp"
             android:fontFamily="sans-serif-medium"
             android:layout_marginStart="40dp"
             android:layout_marginTop="25dp"

             />


      </LinearLayout>
   </androidx.cardview.widget.CardView>
   <androidx.cardview.widget.CardView
       android:id="@+id/cdCliente"
       android:layout_width="match_parent"
       android:layout_height="200dp"
       android:layout_margin="16dp"
       app:cardBackgroundColor="@color/black"
       app:cardCornerRadius="20dp"
       >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="50dp"
          android:orientation="horizontal"
          >
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/white"
             android:text="CADASTRAR CLIENTE"
             android:textStyle="bold"
             android:textSize="20sp"
             android:fontFamily="sans-serif-medium"
             android:layout_marginStart="40dp"
             android:layout_marginTop="25dp"


             />


      </LinearLayout>
   </androidx.cardview.widget.CardView>
   <androidx.cardview.widget.CardView
       android:id="@+id/cdLogradouro"
       android:layout_width="match_parent"
       android:layout_height="200dp"
       android:layout_margin="16dp"
       app:cardBackgroundColor="@color/cinza2"
       app:cardCornerRadius="20dp"
       >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="50dp"
          android:orientation="horizontal"
          >
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/white"
             android:text="CADASTRAR LOGRADOURO"
             android:textStyle="bold"
             android:textSize="20sp"
             android:fontFamily="sans-serif-medium"
             android:layout_marginStart="20dp"
             android:layout_marginTop="25dp"


             />


      </LinearLayout>
   </androidx.cardview.widget.CardView>

</LinearLayout>
   </ScrollView>


</LinearLayout>